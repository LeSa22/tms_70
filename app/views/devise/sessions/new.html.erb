<html lang="en">
  <head>
    <title><%= full_title yield :title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag "application", media: "all",
      "data-turbolinks-track": true %>
    <%= javascript_include_tag "application",
      "data-turbolinks-track": true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render "layouts/header" %>
    <div class="body_wrapper body_home framgia">
      <div class="flash">
        <%= render "layouts/messages" %>
      </div>
      <section id="login">
        <div class="row">
          <div class="col-xs-12">
            <div class="form-wrap">
              <h1><%= t "login" %></h1>
              <%= form_for resource, as: resource_name,
                url: session_path(resource_name),
                html: {class: "form-signin"} do |f| %>
              <div class="form-group">
                <%= f.email_field :email, class: "form-control",
                  id: "user_email", placeholder: "#{I18n.t "email"}" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, class: "form-control",
                  id: "user_password", placeholder: "#{I18n.t "password"}" %>
              </div>
              <% if devise_mapping.rememberable? -%>
              <div class="checkbox">
                <span>
                  <%= f.label :remember_me, class: "pull-left" do %>
                    <%= f.check_box :remember_me, class: "icheck pull-left" %>
                    <span><%= t "remember_me" %></span>
                  <% end %>
                </span>
                <span class="pull-right">
                  <%= link_to t("forgot_password"), "#" %>
                </span>
              </div>
              <% end -%>
              <%= f.submit t("btn_login"), class: "btn btn-custom btn-lg btn-block" %>
              <% end %>
            </div>
          </div>
      </section>
    </div>
  </body>
</html>

<%= provide :title, t("admin.title") %>
<section id="service" class="admin-section">
  <div class="container">
    <div class="row">
      <div class="col-md-12 padding-0 margin-bottom-20">
        <h3 class="animated fadeInLeft">
          <%= t "admin.subject_admin.subjects" %>
        </h3>
      </div>
      <div class = "row margin-bot-20">
        <div class="form-group">
          <div class="col-md-4">
            <%= link_to new_admin_subject_path, class: "btn btn-info" do %>
              <%= t "admin.subject_admin.btn_create" %>
              <span class="glyphicon glyphicon-plus"></span>
            <% end %>
          </div>
        </div>
      </div>
      <div class="responsive-table">
        <table id="table_list" class="table table-striped table-bordered">
          <thead>
            <tr>
              <th class="text-center">
                <%= t "admin.subject_admin.name" %>
              </th>
              <th class="text-center">
                <%= t "admin.subject_admin.description" %>
              </th>
              <th class="text-center">
                <%= t "admin.subject_admin.create_at" %>
              </th>
              <th class="text-center">
                <%= t "admin.subject_admin.edit" %>
              </th>
              <th class="text-center">
                <%= t "admin.subject_admin.delete" %>
              </th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: "subject", collection: @subjects %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
 <%= paginate @subjects, theme: "twitter-bootstrap-3" %>
</section>

<ul class="breadcrumb">
  <li>
    <i class="fa fa-home"></i>
      <%= link_to t("admin.index.home"), admin_root_path %>
    <i class="icon-angle-right"></i>
  </li>
  <li><%= link_to t("admin.index.courses"), admin_root_path %></li>
</ul>
<div class="row-fluid sortable ui-sortable">
  <div class="box span12">
    <div class="box-header" data-original-title>
      <h2>
        <i class="fa fa-folder white user"></i>
        <span class="break"></span><%= t "admin.index.courses-item" %>
      </h2>
      <div class="box-icon">
        <div class="linkto">
          <%= link_to t("admin.index.new_button"), "#" %>
          <i class="fa fa-plus white user"></i>
        </div>
      </div>
    </div>
    <div class="box-content">
      <div class="row-fluid">
        <div class="span6">
          <div class="dataTables_length" id="DataTables_Table_0_length">
            <label>
              <select aria-controls="DataTables_Table_0" size="1" name="DataTables_Table_0_length">
                <option selected="selected" value=<%= t "admin.index.value" %>>
                  <%= t "admin.index.value" %>
                </option>
                <option value=<%= t "admin.index.value" %>>
                  <%= t "admin.index.value" %>
                </option>
                <option value=<%= t "admin.index.value" %>>
                  <%= t "admin.index.value" %>
                </option>
                <option value=<%= t "admin.index.value" %>>
                  <%= t "admin.index.value" %>
                </option>
              </select><%= t "admin.index.record" %>
            </label>
          </div>
        </div>
        <div class="span6">
          <div id="DataTables_Table_0_filter" class="dataTables_filter">
            <label>
              <%= t "admin.index.search" %>
              <input aria-controls="DataTables_Table_0"
                placeholder=<%= t "admin.index.placeholder_search_name" %>
                type="text">
            </label>
          </div>
        </div>
      </div>
      <table id="DataTables_Table_0" class="table table-striped
        table-bordered bootstrap-datatable datatable" aria-describedby="DataTables_Table_0_info">
        <thead>
          <tr>
            <th><%= t "admin.index.table_name" %></th>
            <th><%= t "admin.index.table_start_date" %></th>
            <th><%= t "admin.index.table_finish_date" %></th>
            <th><%= t "admin.index.table_trainers" %></th>
            <th><%= t "admin.index.table_status" %></th>
            <th><%= t "admin.index.table_action" %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= t "admin.header.username" %></td>
            <td class="center"><%= t "admin.header.date" %></td>
            <td class="center"><%= t "admin.header.date" %></td>
            <td class="center"><%= t "admin.header.username" %></td>
            <td class="center">
              <span class="label label-success"><%= t "admin.index.status_0" %></span>
            </td>
            <td class="center">
              <%= link_to "#", class: "btn btn-success" do %>
                <i class="fa fa-eye white"></i>
              <% end %>
              <%= link_to "#", class: "btn btn-info" do %>
                <i class="fa fa-edit white"></i>
              <% end %>
              <%= link_to "#", class: "btn btn-danger" do %>
                <i class="fa fa-trash white"></i>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
